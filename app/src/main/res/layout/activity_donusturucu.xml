<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Donusturucu">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-light"
        android:text="Dönüştürücü"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="341dp"
        android:layout_height="204dp"
        android:layout_marginBottom="436dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/editTextNumberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/spinnerdecimal"
            android:layout_width="match_parent"
            android:layout_height="46dp" />

        <TextView
            android:id="@+id/textViewdecimal"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="TextView" />

        <Button
            android:id="@+id/buttonsonucdecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="İşlemi Yap" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="341dp"
        android:layout_height="204dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <EditText
            android:id="@+id/megaByteEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <Spinner
            android:id="@+id/donusturmeTipiByteSpinner"
            android:layout_width="match_parent"
            android:layout_height="57dp" />

        <TextView
            android:id="@+id/sonucTextViewByte"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="TextView" />

        <Button
            android:id="@+id/donusturmeButtonByte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="İşlemi Yap" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="204dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <EditText
            android:id="@+id/celsiusEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <RadioButton
            android:id="@+id/fahrenheitRadioButton"
            android:layout_width="111dp"
            android:layout_height="35dp"
            android:text="Fahrenayt" />

        <RadioButton
            android:id="@+id/kelvinRadioButton"
            android:layout_width="104dp"
            android:layout_height="29dp"
            android:text="Kelvin" />

        <TextView
            android:id="@+id/sonucTextView"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="TextView" />

        <Button
            android:id="@+id/donusturmeButtonsicaklik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="İşlemi Yap" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>